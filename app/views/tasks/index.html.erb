<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
  <li> <%= check_box("task", task.id, {checked: task.completed}) %>
  <%= task.title %> 
  <%= link_to image_tag('find'), tasks_path(task) %> | <%= link_to image_tag('delete'), task_path(task), method: :delete, data: { confirm: "are you sure" } %></li>
  <% end %>
  
  <%= link_to "Add a new Task",  tasks_new_path %>
</ul>